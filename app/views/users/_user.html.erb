<div id="<%= dom_id user %>">
  <div class='row'>
    <div class='col-12 col-lg-4 col-xxl-3 mb-4 mb-lg-0'>
      <div class="profile-avatar d-inline-block position-relative overflow-hidden rounded-circle">
        <%= avatar class_name: 'img-md rounded-circle' %>
        <% if user == current_user %>
          <div class="bg-dark change-avatar position-absolute top-0 w-100 h-100 fs-1 d-flex 
                      align-items-center justify-content-center text-white"
               data-bs-toggle="modal" data-bs-target="#imageModal"
          >
            <i class="bi bi-camera"></i>
          </div>
        <% end %>
      </div>
    </div>
    <div class='col-12 col-lg-8 col-xxl-9'>
      <div class="border-bottom ps-3 mb-2 pb-2 d-flex align-items-center">
        <h3 class="d-inline-block me-3 mb-0">
          <%= user.nickname %>
        </h3>
        <%= render 'users/follow_button', user: user %>
      </div>
      <div class="ms-3">
        <% if user.visible? %>        
          <div class="mb-2 fw-medium">
            <%= full_name %>
          </div>
          <div class="mb-2 text-secondary">
            <div class="country-flag d-inline me-1">
              <%= flag %>
            </div>
            <%= @country_name %>
          </div>
          <div class="text-secondary">
            Joined <%= days_ago_in_words user.signed_up_at %>
          </div>
          <div class="text-danger d-block mt-2">
            Rating:
            <span class='user-rating ms-1'>
              <%= user.rating %>
            </span>
            <i class="bi bi-star-fill"></i>
          </div>
        <% elsif current_user == user %>
          <div class="bg-light rounded-4 border border-3 px-5 py-3 text-center">
            <h6>Please fill your personal details to use all the Poster's features</h6>
            <div class="my-2 fs-4 text-secondary">
              <i class="bi bi-arrow-down"></i>
            </div>
            <%= link_to 'Create profile', new_profile_users_path, class: 'btn btn-danger' %>
          </div>
        <% else %>
          <div class="bg-light rounded-4 border border-3 p-5 text-center">
            <h6>The user has not been completed information about himself yet</h6>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
