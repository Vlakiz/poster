<%- if controller_name == 'registrations' %>
  <div class="form-link-block">
    Already have an account?
    <%= link_to "Sign In", new_session_path(resource_name),
      class: "link-underline link-underline-opacity-0 link-offset-1",
      data: { turbo_frame: "_top" }
    %>
  </div>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <div class="form-link-block my-3">
    <%= link_to "Forgot password?", new_password_path(resource_name),
      class: "link-underline link-underline-opacity-0 link-offset-1",
      data: { turbo_frame: "_top" }
    %>
  </div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="form-link-block">
    New to Poster?
    <%= link_to "Sign Up", new_registration_path(resource_name),
      class: "link-underline link-underline-opacity-0 link-offset-1",
      data: { turbo_frame: "_top" }
    %>
  </div>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <div class="form-link-block">
    <%= link_to "Didn't receive confirmation instructions?",new_confirmation_path(resource_name),
      class: "link-underline link-underline-opacity-25 link-offset-1",
      data: { turbo_frame: "_top" }
    %>
  </div>
<% end %>


<%- if devise_mapping.omniauthable? %>
  <div class="form-link-block">
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}",
        omniauth_authorize_path(resource_name, provider),
        class: "link-underline link-underline-opacity-25 link-offset-1",
        data: { turbo: false }
      %>
    <% end %>
  </div>
<% end %>
