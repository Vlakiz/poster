<% posts.each do |post| %>
    <div class="post-wrapper ps-0 mb-3">
        <%= render post %>
    </div>
<% end %>

<% if posts.next_page %>
    <turbo-frame
        id="posts_next_page"
        data-controller="lazy-loader"
    >
        <%= link_to '', feed_path(filter.merge(page: posts.next_page)),
                    class: 'd-none',
                    data: { 'lazy-loader-target' => 'link', testid: 'next_page_link' }
        %>
        <div class="text-center">
            <div class="spinner-border text-danger text-center" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    </turbo-frame>
<% end %>