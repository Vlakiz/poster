<% posts.each do |post| %>
    <div class="post-wrapper ps-0 mb-3">
        <%= render post %>
    </div>
<% end %>

<% if posts.next_page %>
    <div
        data-controller="content-loader"
        data-content-loader-lazy-loading-value=""
        data-content-loader-url-value="<%= posts_path(filter.merge(page: posts.next_page)) %>"
    >
        <div class="text-center">
            <div class="spinner-border text-danger text-center" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    </div>
<% end %>