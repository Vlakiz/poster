<%= form_with(model: post) do |form| %>
  <div>
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div>
    <%= form.label :body, class: "form-label" %>
    <%= form.textarea :body, class: 'form-control', style: 'min-height: 500px' %>
  </div>

  <div class="mt-3">
    <%= form.submit 'Post', class: 'btn btn-danger px-5' %>
  </div>
<% end %>
