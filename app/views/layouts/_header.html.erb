<header class="bg-light pb-1 border-bottom">
    <div class="container">
        <div class="d-flex flex-wrap justify-content-center justify-content-md-between py-3">
            <div class="col">
                <a class="navbar-brand pe-3" href="/">
                    <img src="/poster-logo-min.png" height="50" />
                </a>
            </div>
            <div class="col d-flex align-items-center">
                <ul class='nav d-flex align-items-center'>
                    <li class='nav-item'>
                        <%= link_to "Feed", feed_path, class: "nav-link link-body-emphasis" %>
                    </li>
                    <li class='nav-item'>
                        <%= link_to "Users", users_path, class: "nav-link link-body-emphasis" %>
                    </li>
                    <li class='nav-item'>
                        <a class="nav-link link-body-emphasis" href='#'>
                            Test3
                        </a>
                    </li>
                    <li class='nav-item'>
                        <a class="nav-link link-body-emphasis" href='#'>
                            Test4
                        </a>
                    </li>
                </ul>
            </div>
            <div class="col d-flex align-items-center justify-content-end">
                <% if user_signed_in? %>
                    <span>
                        Welcome, <b><%= current_user.nickname %></b>
                    </span>
                <% else %>
                    <%= button_tag class: 'btn btn-outline-danger', data: { bs_toggle: "modal", bs_target: "#loginModal" } do %>
                        <%= link_to "Login", new_user_session_path,
                                class: "nav-link",
                                data: {
                                    turbo_frame: "login_modal_frame"
                                }
                        %>
                    <% end %>
                    <%= button_tag "Sign-up", class: 'btn btn-danger ms-2' %>
                <% end %>
            </div>
        </div>
    </div>
</header>